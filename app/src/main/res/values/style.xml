<resources>

    <style name="themeOnverlay_timePicker" parent="@style/ThemeOverlay.MaterialComponents.Dialog">
        <item name="colorControlActivated">@color/Button_Primary</item>
        <item name="android:colorControlHighlight">@color/Button_Font</item>
        <item name="colorAccent">@color/Button_Primary</item>
        <item name="android:textColorPrimary">@color/Primary_Font</item>
        <item name="android:textColorSecondary">@color/Secondary_Font</item>
    </style>

    <style name="Image_oval_bottom">
        <item name="cornerSizeBottomRight">280dp</item>
        <item name="cornerFamilyBottomRight">rounded</item>
    </style>

    <style name="Image_circle">
        <item name="cornerSize">50%</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.MaterialComponents.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/BottomSheetDialogStyle</item>
    </style>

    <style name="BottomSheetDialogStyle" parent="Widget.MaterialComponents.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
        <item name="android:backgroundTint">@android:color/transparent</item>
    </style>

    <!-- THEME 1 - Chiffon_Purple-->
    <style name="Theme.PlanteraApp.Chiffon_Purple" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Theme Colors -->
        <item name="App_Container">#FFFFFF</item>
        <item name="Section_Container">#FFEFF7</item>
        <item name="Primary_Font">#000000</item>
        <item name="Secondary_Font">#7C7C7C</item>
        <item name="Button_Font">#FFFFFF</item>
        <item name="Section_Shadow">#DBDBDB</item>
        <item name="Button_Primary">#5E35B1</item>
        <item name="Button_Secondary">#716AEA</item>
        <!-- Primary brand color. -->
        <item name="colorPrimary">?attr/Button_Primary</item>
        <item name="colorPrimaryVariant">?attr/App_Container</item>
        <item name="colorOnPrimary">?attr/Button_Font</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">?attr/Section_Container</item>
        <item name="colorSecondaryVariant">?attr/Section_Shadow</item>
        <item name="colorOnSecondary">?attr/Primary_Font</item>
        <!-- Status bar color. -->
        <item name="android:windowBackground">#fff</item>
        <item name="windowActionBar">false</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="windowNoTitle">true</item>
    </style>

