<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragments.Calendar"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/App_Container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/image_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:src="@drawable/img_default_profile_image"
                app:shapeAppearance="@style/Image_circle"
                android:elevation="4dp"
                android:scaleType="centerCrop" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="14dp"
            android:fontFamily="@font/cursive_font"
            android:maxLines="1"
            android:gravity="center|start"
            android:inputType="textNoSuggestions"
            android:textSize="14sp"
            android:selectAllOnFocus="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <AutoCompleteTextView
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="14dp"
            android:hint="Plant Type"
            android:singleLine="true"
            android:completionThreshold="1"
            android:drawableEnd="@drawable/ic_right_icon"
            android:focusableInTouchMode="true"
            android:dropDownSelector="@color/Button_Primary"
            android:clickable="true"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <AutoCompleteTextView
            android:id="@+id/location_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="14dp"
            android:hint="Plant Location"
            android:completionThreshold="1"
            android:singleLine="true"
            android:drawableEnd="@drawable/ic_right_icon"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/plant_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:padding="14dp"
            android:fontFamily="@font/cursive_font"
            android:maxLines="4"
            android:gravity="center|start"
            android:inputType="textNoSuggestions"
            android:textSize="14sp"
            android:focusableInTouchMode="true"
            android:clickable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:id="@+id/btn_load_data"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:backgroundTint="#D81B60"
                android:fontFamily="@font/opensans_bold"
                android:textColor="#fff"
                android:text="Load" />

            <View
                android:layout_width="16dp"
                android:layout_height="match_parent" />

            <Button
                android:id="@+id/btn_save_data"
                android:layout_width="wrap_content"
                android:fontFamily="@font/opensans_bold"
                android:layout_height="wrap_content"
                android:text="SAVE" />

        </LinearLayout>

    </LinearLayout>

</ScrollView>