<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SubFragments.ColorTheme"
    android:gravity="center"
    android:orientation="vertical"
    android:theme="@style/Theme.PlanteraApp"
    android:background="@color/App_Container">

    <RadioGroup
        android:id="@+id/colorTheme_radio_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/padding_16_dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:paddingBottom="@dimen/padding_16_dp"
            android:layout_marginBottom="@dimen/margin_16_dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/close"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_cross"
                android:scaleType="centerCrop"
                android:padding="4dp"
                android:layout_marginEnd="@dimen/margin_10_dp"
                android:background="@android:color/transparent"
                app:tint="@color/Primary_Font" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Choose a plant theme"
                android:textColor="@color/Primary_Font"
                android:textSize="@dimen/font_size_22sp"
                android:fontFamily="@font/main_variable_font"
                android:textStyle="bold" />

        </LinearLayout>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/apply_default_theme"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/com_custom_checkbox"
            android:background="@drawable/com_top_item_shape"
            android:padding="@dimen/padding_16_dp"
            android:text="Default App Theme"
            android:textColor="@color/Primary_Font"
            android:fontFamily="@font/main_variable_font"
            android:textSize="@dimen/font_size_18sp"
            android:paddingStart="20dp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_bottom_item_shape"
            android:layout_marginBottom="@dimen/margin_16_dp">

            <LinearLayout
                android:id="@+id/layout_default_them"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:theme="@style/Theme.PlanteraApp"
                android:orientation="horizontal" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/apply_monochromatic_brown"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/com_custom_checkbox"
            android:background="@drawable/com_top_item_shape"
            android:padding="@dimen/padding_16_dp"
            android:text="Monochromatic Brown Theme"
            android:textColor="@color/Primary_Font"
            android:fontFamily="@font/main_variable_font"
            android:textSize="@dimen/font_size_18sp"
            android:paddingStart="20dp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_bottom_item_shape"
            android:layout_marginBottom="@dimen/margin_16_dp">

            <LinearLayout
                android:id="@+id/layout_monochromatic_brown"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:theme="@style/Theme.PlanteraApp.Monochromatic.Brown"
                android:orientation="horizontal" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/apply_chiffon_purple"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/com_custom_checkbox"
            android:background="@drawable/com_top_item_shape"
            android:padding="@dimen/padding_16_dp"
            android:text="Chiffon Purple Theme"
            android:textColor="@color/Primary_Font"
            android:fontFamily="@font/main_variable_font"
            android:textSize="@dimen/font_size_18sp"
            android:paddingStart="20dp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />


        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_bottom_item_shape"
            android:layout_marginBottom="@dimen/margin_16_dp">

            <LinearLayout
                android:id="@+id/layout_chiffon_purple"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:theme="@style/Theme.PlanteraApp.Chiffon_Purple"
                android:orientation="horizontal" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/apply_accent_dark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/com_custom_checkbox"
            android:background="@drawable/com_top_item_shape"
            android:padding="@dimen/padding_16_dp"
            android:text="Accent Dark Theme"
            android:textColor="@color/Primary_Font"
            android:fontFamily="@font/main_variable_font"
            android:textSize="@dimen/font_size_18sp"
            android:paddingStart="20dp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_bottom_item_shape"
            android:layout_marginBottom="@dimen/margin_16_dp">

            <LinearLayout
                android:id="@+id/layout_accent_dark"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:theme="@style/Theme.PlanteraApp.Accent.Dark"
                android:orientation="horizontal" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatRadioButton
            android:id="@+id/apply_drakula_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:button="@drawable/com_custom_checkbox"
            android:background="@drawable/com_top_item_shape"
            android:padding="@dimen/padding_16_dp"
            android:text="Dracula Light Theme"
            android:textColor="@color/Primary_Font"
            android:fontFamily="@font/main_variable_font"
            android:textSize="@dimen/font_size_18sp"
            android:paddingStart="20dp"
            android:textStyle="bold"
            tools:ignore="RtlSymmetry" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_bottom_item_shape"
            android:layout_marginBottom="@dimen/margin_16_dp">

            <LinearLayout
                android:id="@+id/layout_drakula_light"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:gravity="center"
                android:theme="@style/Theme.PlanteraApp.Dracula.Light"
                android:orientation="horizontal" />

        </FrameLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/done"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/com_round_shape"
            android:backgroundTint="@color/Button_Primary"
            android:textColor="@color/Button_Font"
            android:layout_marginTop="@dimen/margin_16_dp"
            android:textSize="@dimen/font_size_18sp"
            android:text="DONE" />

    </RadioGroup>

</ScrollView>