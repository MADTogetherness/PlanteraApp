<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".homefragments.Calendar"
    android:gravity="center"
    android:orientation="vertical"
    android:background="@color/App_Container">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:gravity="center"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/add_new_plant"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="30dp"
                android:fontFamily="@font/opensans_semibold"
                android:textColor="@color/Primary_Font"
                android:textSize="20sp"
                android:text="Add new plant"/>

            <View
                android:layout_width="50dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/reset_btn"
                android:layout_width="wrap_content"
                android:layout_height="25dp"
                android:text="RESET"
                android:layout_marginLeft="80dp"
                android:paddingTop="2dp"
                android:paddingHorizontal="10dp"
                android:textColor="@color/Primary_Font"
                android:background="@drawable/com_round_shape"
                android:backgroundTint="@color/Button_Secondary"
                android:fontFamily="@font/main_variable_font"


                />

        </LinearLayout>

        <TextView
            android:id="@+id/TV_About"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="About"
            android:fontFamily="@font/opensans_semibold"
            android:textColor="@color/Secondary_Font"
            android:layout_margin="20dp"
            android:paddingLeft="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/new_picture"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_add_new_plant_icon_24"
                android:drawableTint="@color/Secondary_Font"
                android:fontFamily="@font/opensans_semibold"
                android:textAlignment="center"
                android:textSize="12sp"
                android:text="NEW PICTURE\n Sample.jpg"/>

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/profile_image"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:src="@drawable/img_default_profile_image"
                app:shapeAppearance="@style/Image_circle"
                android:elevation="4dp"
                android:scaleType="centerCrop" />

            <View
                android:layout_width="10dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/change_theme"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:drawableTop="@drawable/ic_add_new_plant_icon_24"
                android:drawableTint="@color/Secondary_Font"
                android:fontFamily="@font/opensans_semibold"
                android:textAlignment="center"
                android:textSize="12sp"
                android:text="NEW PICTURE\n Sample.jpg"/> />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/plant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Name"
            android:padding="14dp"
            android:fontFamily="@font/cursive_font"
            android:maxLines="1"
            android:gravity="center|start"
            android:inputType="textNoSuggestions"
            android:textSize="14sp"
            android:selectAllOnFocus="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <AutoCompleteTextView
            android:id="@+id/type_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="14dp"
            android:hint="Plant Type"
            android:singleLine="true"
            android:completionThreshold="1"
            android:drawableEnd="@drawable/ic_right_icon"
            android:focusableInTouchMode="true"
            android:dropDownSelector="@color/Button_Primary"
            android:clickable="true"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <AutoCompleteTextView
            android:id="@+id/location_spinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:maxLines="1"
            android:padding="14dp"
            android:hint="Plant Location"
            android:completionThreshold="1"
            android:singleLine="true"
            android:drawableEnd="@drawable/ic_right_icon"
            android:focusableInTouchMode="true"
            android:clickable="true"
            android:textSize="14sp" />


        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <EditText
            android:id="@+id/plant_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Description"
            android:padding="14dp"
            android:fontFamily="@font/cursive_font"
            android:maxLines="4"
            android:gravity="center|start"
            android:inputType="textNoSuggestions"
            android:textSize="14sp"
            android:focusableInTouchMode="true"
            android:clickable="true" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btn_save_data"
            android:layout_width="wrap_content"
            android:fontFamily="@font/opensans_bold"
            android:layout_gravity="center"
            android:layout_height="wrap_content"
            android:text="SAVE" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />


        <EditText
            android:id="@+id/name_to_load"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:hint="Type the name of plant to load" />

        <View
            android:layout_width="match_parent"
            android:layout_height="16dp" />

        <Button
            android:id="@+id/btn_load_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#D81B60"
            android:layout_gravity="center"
            android:fontFamily="@font/opensans_bold"
            android:textColor="#fff"
            android:text="Load" />

        <TextView
            android:id="@+id/extra_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/cursive_font" />


    </LinearLayout>
</ScrollView>