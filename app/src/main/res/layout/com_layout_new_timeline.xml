<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/padding_16_dp"
    android:background="@drawable/com_round_shape"
    android:layout_rowWeight="1"
    android:backgroundTint="?attr/Section_Container"
    >

    <TextView
        android:id="@+id/timeline_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/com_round_shape"
        android:backgroundTint="?attr/Button_Secondary"
        android:fontFamily="@font/main_variable_font"
        android:gravity="center"
        android:lines="1"
        android:paddingStart="@dimen/padding_16_dp"
        android:paddingTop="5dp"
        android:paddingEnd="@dimen/padding_16_dp"
        android:paddingBottom="5dp"
        android:text="Sat, 27 Nov"
        android:textColor="?attr/Button_Font"
        android:textSize="@dimen/font_size_16sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/timeline_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeline_date"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="@dimen/margin_10_dp"
        android:padding="@dimen/margin_10_dp"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Fusce aliquam, justo vel pulvinar fringilla, felis velit laoreet massa, ac vestibulum dolor massa vitae sem. Vestibulum varius, nibh sit amet luctus viverra, libero eros vestibulum erat, nec iaculis ipsum nibh in ligula. Donec neque ex, sollicitudin ut sollicitudin et, scelerisque et erat. "
        android:textColor="?attr/Primary_Font"

        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/add_pictureBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeline_desc"
        android:background="@android:color/transparent"
        android:drawableLeft="@drawable/ic_camera"
        android:text="Add Picture"
        android:textColor="?attr/Primary_Font" />

    <TextView
        android:id="@+id/saveblogBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/timeline_desc"
        android:layout_alignParentEnd="true"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="@dimen/margin_10_dp"

        android:layout_toRightOf="@+id/add_pictureBtn"
        android:background="@drawable/com_round_shape"
        android:backgroundTint="?attr/Button_Primary"
        android:paddingStart="@dimen/padding_16_dp"
        android:paddingTop="5dp"
        android:paddingEnd="@dimen/padding_16_dp"
        android:paddingBottom="5dp"
        android:text="Save"
        android:textAlignment="center"
        android:textColor="?attr/Button_Font"


        />



</RelativeLayout>