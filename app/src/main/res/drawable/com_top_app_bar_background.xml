<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!--The bottom is filled with blue.-->
    <item>
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#FFBF00" />
            <size
                android:width="60dp"
                android:height="40dp" />
            <corners android:radius="12dp" />
        </shape>
    </item>

    <!--The upper layer is 1 from the top of the bottom layer. dp,Distance from bottom 1 dp,Similar marginTop,The fill color is white, thus forming a white background with blue top and bottom edges.-->
    <item android:bottom="3dp"
        android:top="0dp">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle">
            <solid android:color="#1F2937" />
            <size
                android:width="40dp"
                android:height="40dp" />
            <corners
                android:bottomRightRadius="10dp" android:bottomLeftRadius="10dp"
                android:topLeftRadius="0dp" android:topRightRadius="0dp" />
        </shape>
    </item>
</layer-list>
