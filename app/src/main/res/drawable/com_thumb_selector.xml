<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="false">
        <layer-list>
            <item android:gravity="center_vertical">
                <shape>
                    <solid android:color="?attr/Secondary_Font" />
                    <corners android:radius="@dimen/com_size_20_dp" />
                    <size android:height="@dimen/com_size_20_dp" android:width="@dimen/com_size_20_dp" />
                </shape>
            </item>
        </layer-list>
    </item>
    <item android:state_checked="true">
        <layer-list>
            <item android:gravity="center_vertical">
                <shape>
                    <solid android:color="?attr/Button_Primary" />
                    <corners android:radius="@dimen/com_size_20_dp" />
                    <size android:height="@dimen/com_size_20_dp" android:width="@dimen/com_size_20_dp" />
                </shape>
            </item>
        </layer-list>
    </item>
</selector>